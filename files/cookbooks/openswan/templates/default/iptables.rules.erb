*mangle
:PREROUTING ACCEPT
:INPUT ACCEPT
:FORWARD ACCEPT
:OUTPUT ACCEPT
:POSTROUTING ACCEPT
-A INPUT -p udp -m udp --dport 4500 -j MARK --set-mark 0x1194
COMMIT

*nat
:PREROUTING ACCEPT
:POSTROUTING ACCEPT
:OUTPUT ACCEPT
-A POSTROUTING -s 172.16.0.0/255.255.255.0 -o eth0 -j SNAT --to-source 50.57.140.21
COMMIT

*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]
:LOGDROP - [0:0]
-A INPUT -i lo -j ACCEPT
-A INPUT -p icmp -m icmp --icmp-type any -j ACCEPT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
-A INPUT -s 172.16.0.0/24 -i ppp+ -p udp -m state --state NEW -m udp --dport 53 -j ACCEPT
-A INPUT -p udp -m state --state NEW -m udp --dport 500 -j ACCEPT
-A INPUT -p udp -m state --state NEW -m udp --dport 4500 -j ACCEPT
-A INPUT -p udp -m state --state NEW -m udp --dport 1701 -m mark --mark 0x1194 -j ACCEPT
-A INPUT -j LOGDROP
-A LOGDROP -m limit --limit 1/sec -j LOG --log-prefix "iptables-denied: " --log-level 6
-A LOGDROP -m limit --limit 1/sec -j REJECT --reject-with icmp-port-unreachable
-A LOGDROP -j DROP
-A FORWARD -s 172.16.0.0/24 ! -d 172.16.0.0/24 -i ppp+ -o eth0 -j ACCEPT
-A FORWARD -m state --state RELATED,ESTABLISHED -j ACCEPT
COMMIT
